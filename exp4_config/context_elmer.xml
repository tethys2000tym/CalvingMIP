<?xml version="1.0"?>
<!-- Context elmerice -->
   <context id="elmerice">

    <calendar type="none" time_origin="0001-01-01 00:00:00" />

<!-- ============== Variable definition ======================== -->
    <variable_definition>
       <!-- variable id="nsec_per_year"  type="float"  > 31536000 </variable-->
       <variable id="rhoi"           type="float"  > 917.0    </variable>
    </variable_definition>

<!-- ============== FIELD DEFINITION =========================== -->
    <field_definition enabled=".TRUE." >

      <!-- calvingmip variables  -->
      <field_group id="calvingmip" >
        <field_group id="calvingmip_2D_state"  operation="instant">
          <field id="calvingmip_xvelmean"   name="xvelmean"   field_ref="ssavelocity 1_elem" unit="m a-1" /> 
          <field id="calvingmip_yvelmean"   name="yvelmean"   field_ref="ssavelocity 2_elem" unit="m a-1" /> 
          <field id="calvingmip_velmean"    name="velmean"    field_ref="ssavelocity_elem"   unit="m a-1" /> 
          <field id="calvingmip_lithk"      name="lithk"      field_ref="h_elem"  > this*(iareafl + iareagr) </field>
          <field id="calvingmip_topg"       name="topg"       field_ref="bedrock_elem" />
                      <field id="calvingmip_iareagr"     name="iareagr"     field_ref="iareagr"       />
                      <field id="calvingmip_iareafl"     name="iareafl"     field_ref="iareafl"       />
        </field_group>

        <field_group id="calvingmip_2D_flux" grid_ref="GridCells" operation="average">
          <field id="calvingmip_ligroundf"   name="ligroundf" long_name="Loss of grounded ice mass resulting at grounding line"  field_ref="ligroundf"       unit="kg m-2 a-1" > this*(iareafl + iareagr)*$rhoi </field>
          <field id="calvingmip_lifmassbf" name="lifmassbf" unit="kg m-2 a-1" long_name="Loss of ice mass resulting from ice front melting and calving" field_ref="calving_front_flux"  > this*(iareafl + iareagr)*$rhoi </field>
        </field_group>

        <field_group id="calvingmip_1D" grid_ref="ScalarGrid_sum">
          <field id="calvingmip_lim"             name="lim"             standard_name="land_ice_mass" unit="kg" field_ref="calvingmip_lithk" > this*cell_area*$rhoi </field>
          <field id="calvingmip_limnsw"          name="limnsw"          standard_name="land_ice_mass_not_displacing_sea_water" unit="kg" field_ref="haf_elem" > this*cell_area*$rhoi </field>
          <field id="calvingmip_iareagr"         name="iareagr"         standard_name="grounded_ice_sheet_area" unit="m2" field_ref="calvingmip_iareagr" > this*cell_area </field>
          <field id="calvingmip_iareafl"         name="iareafl"         standard_name="floating_ice_shelf_area" unit="m2" field_ref="calvingmip_iareafl" > this*cell_area </field>
          <field id="calvingmip_tendligroundf"   name="tendligroundf"   standard_name="tendency_of_grounded_ice_mass" unit="kg a-1" field_ref="calvingmip_ligroundf" > this*cell_area </field>
          <field id="calvingmip_tendlicalvf"   name="tendlicalvf"   standard_name="tendency_of_land_ice_mass_due_to_calving_and_ice_front_melting" unit="kg a-1" field_ref="calvingmip_lifmassbf" > this*cell_area </field>
        </field_group>

        <field_group id="calvingmip_1D_true_cell_area" grid_ref="ScalarGrid_sum">
          <field id="calvingmip_lim_tca"             name="lim_tca"             standard_name="land_ice_mass" unit="kg" field_ref="calvingmip_lithk"  > this*true_cell_area*$rhoi </field>
          <field id="calvingmip_limnsw_tca"          name="limnsw_tca"          standard_name="land_ice_mass_not_displacing_sea_water" unit="kg" field_ref="haf_elem"      > this*true_cell_area*$rhoi </field>
          <field id="calvingmip_iareagr_tca"         name="iareagr_tca"         standard_name="grounded_ice_sheet_area" unit="m2" field_ref="calvingmip_iareagr" > this*true_cell_area </field>
          <field id="calvingmip_iareafl_tca"         name="iareafl_tca"         standard_name="floating_ice_shelf_area" unit="m2" field_ref="calvingmip_iareafl" > this*true_cell_area </field>
          <field id="calvingmip_tendligroundf_tca"   name="tendligroundf_tca"   standard_name="tendency_of_grounded_ice_mass" unit="kg a-1" field_ref="calvingmip_ligroundf" > this*true_cell_area </field>
          <field id="calvingmip_tendlicalvf_tca"   name="tendlicalvf_tca"   standard_name="tendency_of_land_ice_mass_due_to_calving_and_ice_front_melting" unit="kg a-1" field_ref="calvingmip_lifmassbf" > this*true_cell_area </field>
        </field_group>


      <!-- end: calvingmip variables  -->
      </field_group>

      <field_group id="elmer" operation="instant" >

        <field_group id="elmer_topo" >
          <field id="h"       standard_name="land_ice_thickness" unit="m" grid_ref="GridNodes"  />
          <field id="h_elem"  standard_name="land_ice_thickness" unit="m" grid_ref="GridCells"  />
          
          <field id="haf"      standard_name="heigh_above_flotation" unit="m"  grid_ref="GridNodes" />
          <field id="haf_elem" standard_name="heigh_above_flotation" unit="m"  grid_ref="GridCells" />

          <field id="bedrock"      standard_name="bedrock_altitude" unit="m"  grid_ref="GridNodes" comment="The bedrock topography wrt geoid EIGEN-6C4 (positive up)" />
          <field id="bedrock_elem" standard_name="bedrock_altitude" unit="m" grid_ref="GridCells"  >
                           <variable name="double_attr" type="double"> 3.141592654 </variable>
                      </field>
        </field_group>

        <field_group id="elmer_masks" >
          <field id="groundedmask" unit="1" grid_ref="GridNodes" />
          <field id="iareagr"     standard_name="grounded_ice_sheet_area_fraction" unit="1" grid_ref="GridCells" />
          <field id="iareafl"     standard_name="floating_ice_shelf_area_fraction" unit="1" grid_ref="GridCells" />
         <!--  <field id="basins"     standard_name="ice_catchments_basins_mask"       unit="1" grid_ref="GridNodes" /> -->
        </field_group>

               <field_group id="elmer_velocity">
          <field id="ssavelocity 1"      standard_name="land_ice_vertical_mean_x_velocity"             unit="m a-1" grid_ref="GridNodes" />
          <field id="ssavelocity 2"      standard_name="land_ice_vertical_mean_y_velocity"             unit="m a-1" grid_ref="GridNodes" />
          <field id="ssavelocity 1_elem" standard_name="land_ice_vertical_mean_x_velocity"             unit="m a-1" grid_ref="GridCells" />
          <field id="ssavelocity 2_elem" standard_name="land_ice_vertical_mean_y_velocity"             unit="m a-1" grid_ref="GridCells" />
          <field id="ligroundf"          standard_name="land_ice_specific_mass_flux_at_grounding_line" unit="m a-1" grid_ref="GridCells" />
                      <field id="calving_front_flux" standard_name="land_ice_specific_mass_flux_due_to_calving_and_ice_front_melting" unit="m a-1" grid_ref="GridCells" />

          <field id="vx" field_ref="ssavelocity 1" />
          <field id="vy" field_ref="ssavelocity 2" />
          <field id="vnorm" unit="m a-1" grid_ref="GridNodes" > sqrt(vx^2+vy^2) </field>
          <field id="vx_elem" field_ref="ssavelocity 1_elem" />
          <field id="vy_elem" field_ref="ssavelocity 2_elem" />
          <field id="ssavelocity_elem" unit="m a-1" grid_ref="GridCells" > sqrt(vx_elem^2+vy_elem^2) </field>
        </field_group>


        <field_group id="elmer_friction" >
          <field id="ceff" long_name="ssa_effective_friction_coefficent" unit="MPa m-1 a" grid_ref="GridNodes" />
        </field_group>
 

        <field_group id="elmer_forcings" > 
                      <field id="acabf"     standard_name="land_ice_surface_specific_mass_balance_flux" unit="m a-1"  grid_ref="GridCells" />
                      <field id="libmassbf" standard_name="land_ice_basal_specific_mass_balance_flux"   unit="m a-1"  grid_ref="GridCells" />
        </field_group>

              <field_group id="mesh_info2" operation= "instant" >
                       <field id="node_x" name="x" standard_name="projection_x_coordinate" unit="m" grid_ref="GridNodes" />
                       <field id="node_y" name="y" standard_name="projection_y_coordinate" unit="m" grid_ref="GridNodes" />
                       <field id="cell_area" name="cell_area" unit="m2" grid_ref="GridCells" />
                      <field id="true_cell_area" name="true_cell_area" unit="m2" grid_ref="GridCells" /> 
              </field_group>

              <field_group id="elmer_global" grid_ref="ScalarGrid_sum">
                      <field id="time" name="elmer_time" unit="a" prec="8" />
              </field_group>

      </field_group>

    </field_definition>

<!-- ============== FILE DEFINITION =========================== -->
    <file_definition src="./file_def_elmer.xml"/>

<!-- ============== DOMAIN DEFINITION =========================== -->
    <domain_definition> 
      <!-- mandatory domains ...  -->
      <domain id="cells" name="mesh2D"/>
      <domain id="edges" name="mesh2D"/>
      <domain id="nodes" name="mesh2D"/>
      <!-- ...  -->
    </domain_definition>

<!-- ============== GRID DEFINITION =========================== -->
    <grid_definition>
     
      <!-- mandatory grids... -->
      <grid id="GridCells">
        <domain domain_ref="cells"/>
      </grid>

      <grid id="GridNodes">
        <domain domain_ref="nodes"/>
      </grid>

      <grid id="GridEdges">
        <domain domain_ref="edges"/>
      </grid>
      <!-- ...  -->

      <grid id="ScalarGrid_sum">
        <scalar id="scalar_sum" >
              <reduce_domain operation="sum" />
        </scalar>
      </grid>

      <grid id="ScalarGrid_min">
        <scalar id="scalar_min" >
              <reduce_domain operation="min" />
        </scalar>
      </grid>

      <grid id="ScalarGrid_max">
        <scalar id="scalar_max" >
              <reduce_domain operation="max" />
        </scalar>
       </grid>

    </grid_definition>

  </context>
